{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
        "@assets/*": ["./src/assets/*"],
        "@components/*": ["./src/components/*"],
        "@screens/*": ["./src/screens/*"],
        "@services/*": ["./src/services/*"],
        "@routes/*": ["./src/routes/*"],
        "@dtos/*": ["./src/dtos/*"],
        "@theme/*": ["./src/theme/*"],
        "@schemas/*": ["./src/schemas/*"],
      }
  }
}
